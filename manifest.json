{
  "manifest_version": 2,
  "name": "Fake News Detector",
  "version": "1.0",

  "description":
    "Allows users to flag you newsfeed links as fake news, click baits, and more.",
  "homepage_url":
    "https://github.com/mdn/webextensions-examples/tree/master/beastify",
  "icons": {
    "48": "icons/beasts-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "js": [
        "dist/FlagPopup.js",
        "dist/StoryVotes.js",
        "src/facebookInjector.js"
      ]
    }
  ]
}
